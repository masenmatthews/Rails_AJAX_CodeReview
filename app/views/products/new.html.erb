<h1>Add a product.</h1>

<%= form_for [@product], url: products_path, html: { multipart: true } do |f| %>
  <%= f.file_field :image, as: :file %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <hr>
  <%= f.submit %>
<% end %>
