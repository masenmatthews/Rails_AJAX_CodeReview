<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h5><%= link_to product.name, product_path(product), id: "#{product.id}", remote: true %></h5>
      <div id="product_description<%= product.id %>"></div>
      <div id="product_price<%= product.id %>"></div>
      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %> </span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
